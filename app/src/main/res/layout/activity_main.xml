<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layers"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        android:contentDescription="logo_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Добро пожаловать"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <LinearLayout
        android:id="@+id/inputs_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="28dp"
        app:layout_constraintTop_toBottomOf="@id/welcome">

        <!-- EditText для логина с фигурой rectangle_50 -->
        <EditText
            android:id="@+id/et_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rectangle_50"
            android:hint="Логин"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textColorHint="#99000000"
            android:textSize="16sp"
            android:imeOptions="actionNext"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <!-- EditText для пароля с фигурой rectangle_50 -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rectangle_50"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textColorHint="#99000000"
            android:textSize="16sp"
            android:imeOptions="actionDone"/>

    </LinearLayout>

    <!-- Кнопка: нижний PNG rectangle_49 и поверх ним стрелка majesticons_arrow_up -->
    <FrameLayout
        android:id="@+id/submit_wrapper"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/inputs_container"
        app:layout_constraintEnd_toEndOf="@id/inputs_container"
        app:layout_constraintStart_toStartOf="@id/inputs_container"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:id="@+id/btn_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_49"
            android:scaleType="fitCenter"
            android:contentDescription="submit"/>

        <ImageButton
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/majesticons_arrow_up"
            android:scaleType="center"
            android:contentDescription="submit"
            android:adjustViewBounds="true"
            android:padding="12dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>